{
  "name": "codecritter",
  "displayName": "CodeCritter - AI Code Review",
  "description": "An AI-powered code reviewer with multiple personalities to help you improve your code quality, style, and security.",
  "version": "1.4.0",
  "publisher": "shruti-pandey",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/shrutipandey15/gitwit.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Education",
    "Other"
  ],
  "keywords": [
    "ai",
    "code review",
    "gemini",
    "code quality",
    "docstring",
    "security",
    "commit",
    "automated review"
  ],
  "activationEvents": [
    "onCommand:codecritter.start",
    "onCommand:codecritter.toggleAutoReview",
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codecritter.start",
        "title": "Start Review",
        "category": "CodeCritter"
      },
      {
        "command": "codecritter.toggleAutoReview",
        "title": "Toggle Auto Review",
        "category": "CodeCritter"
      },
      {
        "command": "codecritter.selectPersona",
        "title": "Select Persona",
        "category": "CodeCritter"
      },
      {
        "command": "codecritter.explainCode",
        "title": "CodeCritter: Explain This Code",
        "category": "CodeCritter"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "codecritter.explainCode",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "CodeCritter",
      "properties": {
        "codecritter.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your personal Google AI API key for CodeCritter to use. Get one from https://makersuite.google.com/app/apikey"
        },
        "codecritter.persona": {
          "type": "string",
          "default": "Strict Tech Lead",
          "description": "The personality of the AI code reviewer.",
          "enum": [
            "Strict Tech Lead",
            "Supportive Mentor",
            "Sarcastic Reviewer",
            "Code Poet",
            "Paranoid Security Engineer"
          ]
        },
        "codecritter.autoReviewEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code review when files are saved"
        },
        "codecritter.reviewThreshold": {
          "type": "string",
          "default": "medium",
          "description": "Minimum severity level to show auto-review notifications",
          "enum": [
            "low",
            "medium",
            "high"
          ],
          "enumDescriptions": [
            "Show all reviews including minor issues",
            "Show reviews for moderate and severe issues",
            "Show only reviews for severe issues"
          ]
        },
        "codecritter.commitAssistEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic commit message suggestions when files are saved"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1"
  }
}
